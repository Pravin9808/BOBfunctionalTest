pipeline {
    agent any
    tools{
        jdk "JAVA_HOME"
        maven "MAVEN"
        }
    stages {
        stage('Test') {
            steps {
                bat "mvn -D clean test"                      

          }
        }
    }
    post {  
         success {  
             //def console_output = "${env.BUILD_URL}/console" 
             mail bcc: '', body: "Details: ${env.JOB_NAME} Build Number: ${env.BUILD_NUMBER} Build: ${env.BUILD_URL} Console Output: ${env.BUILD_URL}/console", cc: '', from: 'pravininteractive25@gmail.com', replyTo: '', subject: 'Failing success Test', to: 'pravin.kumar@interactiveavenues.com'
         }  
    }   

}
